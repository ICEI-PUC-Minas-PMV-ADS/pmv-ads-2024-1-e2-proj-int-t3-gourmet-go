@{
    ViewData["Title"] = "Esqueci Senha";
}

<style>
    .text-green-light {
        color: #2E8B57;
    }
</style>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-sm-5">
            <img class="logo" src="~/images/logo.png" alt="logo">
            <div class="card bg-white">
                <div class="card-body">
                    <form method="post" action="@Url.Action("SendPasswordResetLink", "Home")">
                        <div class="form-group">
                            <label class="text-green-light">Informe o Email cadastrado, iremos enviar um link para o reset de senha.</label>
                            <label for="email" class="text-green-light">E-mail</label>
                            <input type="email" id="email" name="email" class="form-control" required />
                        </div>
                        <div class="form-group text-center">
                            <button type="submit" class="btn btn-primary">Enviar</button>
                            <p>
                                <a href="@Url.Action("Index", "Home")">Voltar para Login</a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
