@model GourmetGo.Models.Usuario

@{
  ViewData["Title"] = "Cliente";
}

<div class="text-center">
  <div class="container-fluid h-100">
    <div class="row align-items-center justify-content-center h-100">
      <div class="col-md-6 col-lg-6">
        <img class="logo" src="~/images/logo.png" alt="logo">
        <div class="login">
          <nav class="menu">
            <h2>Bem Vindo, @Model.Nome</h2>
            <div class="menu-btn">
              <a asp-controller="Cliente" asp-action="Cardapio" asp-route-id="@Model.Id">
                <img class="icons" src="~/images/cardapio.png" alt="cardapio">
                <span class="menu-option">Cardápio</span>
              </a>
            </div>
            <div class="menu-btn">
              <a asp-controller="Cliente" asp-action="Pedidos" asp-route-id="@Model.Id">
                <img class="icons" src="~/images/pedidos.png" alt="pedidos">
                <span class="menu-option">Pedidos</span>
              </a>
            </div>
            <div class="menu-btn">
              <a href="@Url.Action("Edit", "EditarPerfil", new { id = @Model.Id })">
                <img class="icons" src="~/images/config.png" alt="configurações">
                <span class="menu-option">Configurações</span>

              </a>
            </div>
          </nav>
        </div>
        <a class="text-light btn btn-modify text-center p-2 px-3 mt-4" asp-area="" asp-controller="Usuarios"
          asp-action="Logout">Logout</a>
      </div>
    </div>
  </div>
</div>


<style>
  .btn-modify {
    background-color: #0a7069;
    border: 3px solid rgba(0, 0, 0, 0.2);
  }
</style>
