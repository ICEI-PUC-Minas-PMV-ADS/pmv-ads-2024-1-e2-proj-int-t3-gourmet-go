@model GourmetGo.Models.Estoque

@{
    ViewData["Title"] = "Create";
}

<div class="text-center">
    <div class="container-fluid h-100">
        <div class="row align-items-center justify-content-center h-100">
            <div class="col-md-6 col-lg-5">
                <img class="logo" src="~/images/logo.png" alt="logo">
                <div class="login">
                    <label class="fs-2 cadastro-text">Adicionar item</label>
                    <form asp-action="Create" class="">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Nome" class="control-label"></label>
                            <input asp-for="Nome" class="form-control" />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Quantidade" class="control-label"></label>
                            <input asp-for="Quantidade" class="form-control" />
                            <span asp-validation-for="Quantidade" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Preco" class="control-label">Preço</label>
                            <input asp-for="Preco" class="form-control" type="number" />
                            <span asp-validation-for="Preco" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="DataEntrada" class="control-label"></label>
                            <input asp-for="DataEntrada" class="form-control" type="date" />
                            <span asp-validation-for="DataEntrada" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-4">
                            <label asp-for="Categoria" class="control-label"></label>
                            <select asp-for="Categoria" class="form-control"
                                asp-items="Html.GetEnumSelectList<Categoria>()"></select>
                            <span asp-validation-for="Categoria" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Confirmar" class="btn btn-color text-light" />
                            <a asp-action="Index" class="btn btn-secondary">Voltar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .cadastro-text {
        color: #0C847B;
    }

    .btn-color {
        background-color: #0C847B;
    }

    .cadastro-button {
        background-color: #0C847B;
    }

    .a-link {
        color: #002D2B;
    }
</style>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
