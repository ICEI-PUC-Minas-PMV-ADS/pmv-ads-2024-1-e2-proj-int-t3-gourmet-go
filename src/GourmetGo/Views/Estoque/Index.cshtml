@model IEnumerable<GourmetGo.Models.Estoque>

@{
    ViewData["Title"] = "Index";
}

@* Superior *@
<div class="d-flex flex-row align-items-center justify-content-around mb-3 ">
    <img class="logo1 text-center" src="~/images/minor-logo.png" alt="logo">
    <button class=" text-center btn btn-voltar btn-voltar px-5">Voltar</button>
</div>

<p class=" fs-1 d-flex flex-row align-items-center justify-content-around text-light mb-4">Estoque</p>
<p class="text-center mb-4">
    <a asp-action="Create" class="btn btn-success fs-5">Adicionar novo item</a>
</p>

<div class="container-máximo">

    <div class="container-fluid d-flex flex-wrap flex-row">
        @foreach (var item in Model)
        {
            @* Conteúdo - Containers - Caixa *@

            @* Primeiro container *@
            <div class="container-sm d-flex flex-column container-item mb-4">
                <h3 class="text-center text-light mb-0 mt-3">@Html.DisplayFor(modelItem => item.Nome)</h3>
                <p class="text-center text-light mt-0 text-decoration-underline"></p>
                <div class="text-light fs-5">
                    <div class="d-flex flex-row">
                        <p class="me-2">&#x2022; Quantidade:</p>
                        <p>@Html.DisplayFor(modelItem => item.Quantidade)</p>
                    </div>
                    <div class="d-flex flex-row">
                        <p class="me-2">&#x2022; Preço:</p>
                        <p>@Html.DisplayFor(modelItem => item.Preco)</p>
                    </div>
                    <div class="d-flex flex-row">
                        <p class="me-2">&#x2022; Data de Entrega:</p>
                        <p>@Html.DisplayFor(modelItem => item.DataEntrada)</p>
                    </div>
                    <div class="d-flex flex-row">
                        <p class="me-2">&#x2022; Categoria:</p>
                        <p>@Html.DisplayFor(modelItem => item.Categoria)</p>
                    </div>
                </div>
                <div class="d-flex align-items-end flex-row justify-content-center mb-3 buttons">
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary me-2 ">Detalhes</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning me-2">Editar</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Excluir</a>
                </div>
            </div>
        }
    </div>
</div>









<style>
    .logo1 {
        height: auto;
        width: 100px;
    }

    .btn-voltar {
        background-color: #0C847B;
        color: #fff;
        font-size: 22px;
    }

    .container-item {
        background-color: #0C847B;
        border-radius: 10px;
        border: 5px solid rgba(0, 0, 0, 0.2);
        min-width: 150px;
        max-width: 400px;
    }


    .btn-alterar,
    .btn-detail {
        background-color: #D9D9D9;
        border-radius: 8px;
    }

    .btn-alterar {
        font-size: 1.05em;
    }
</style>

