@model IEnumerable<GourmetGo.Models.Pedido>

@{
    ViewData["Title"] = "Index";
}

<div class="container">

    @* Superior *@
    <div class="d-flex flex-row align-items-center justify-content-around ">
        <img class="logo1 text-center" src="~/images/minor-logo.png" alt="logo">
        <button class=" text-center btn btn-voltar btn-voltar px-5">Voltar</button>
    </div>

    <h1 class="d-flex flex-row align-items-center justify-content-around text-light">Gestão de Pedidos</h1>

    @foreach (var item in Model)
    {
        @* Conteúdo - Containers - Caixa *@
        <div class="d-flex">
            @* Primeiro container *@
            <div class="container-sm container-item mb-4">
                <h3 class="text-center text-light mb-0 mt-2">Cliente</h3>
                <p class="text-center text-light mt-0 text-decoration-underline">Status</p>
                <div class="d-flex justify-content-around text-light">
                    <p>@item.Produto.Nome</p>
                    <p>@item.Observações</p>
                </div>
                <div class="buttons">
                    <button>Detalhes</button>
                    <button>Alterar</button>
                </div>
            </div>

        </div>
    }








</div>


<style>
    .logo1 {
        height: auto;
        width: 100px;
    }

    .btn-voltar {
        background-color: #0C847B;
        color: #fff;
        font-size: 25px;
    }

    .container-item {
        background-color: #0C847B;
        border-radius: 10px;
        border: 5px solid rgba(0, 0, 0, 0.2);
        min-width: 150px;
        max-width: 400px;
    }
</style>


@* *@